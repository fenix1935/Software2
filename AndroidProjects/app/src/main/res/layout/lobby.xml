<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2CC061"
    tools:context=".Lobby">

    <TextView
        android:id="@+id/textoGrupoCodigo"
        android:layout_width="128dp"
        android:layout_height="0dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="141dp"
        android:text="Codigo"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textoGrupo1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonIniciarActividadLobby"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="52dp"
        android:text="Listo"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoGrupo4" />

    <TextView
        android:id="@+id/textoGrupo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Grupo 1"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textoGrupo2"
        app:layout_constraintStart_toStartOf="@+id/textoGrupo4"
        app:layout_constraintTop_toBottomOf="@+id/textoGrupoCodigo" />

    <TextView
        android:id="@+id/textoGrupo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grupo 2"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textoGrupo3"
        app:layout_constraintStart_toStartOf="@+id/textoGrupo1"
        app:layout_constraintTop_toBottomOf="@+id/textoGrupo1" />

    <TextView
        android:id="@+id/textoGrupo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grupo 3"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textoGrupo4"
        app:layout_constraintStart_toStartOf="@+id/textoGrupo2"
        app:layout_constraintTop_toBottomOf="@+id/textoGrupo2" />

    <TextView
        android:id="@+id/textoGrupo4"
        android:layout_width="121dp"
        android:layout_height="0dp"
        android:layout_marginBottom="168dp"
        android:text="Grupo 4"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/botonIniciarActividadLobby"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoGrupo3" />

</androidx.constraintlayout.widget.ConstraintLayout>