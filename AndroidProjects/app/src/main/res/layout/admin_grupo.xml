<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2CC061"
    tools:context=".AdminGrupo">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:text="Administrador"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonProblemaAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="245dp"
        android:onClick="botonProblemaAdmin"
        android:text="Problema"
        app:layout_constraintStart_toStartOf="@+id/botonPalabrasAdmin"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonHipotesisAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:onClick="botonHipotesisAdmin"
        android:text="HipÃ³tesis"
        app:layout_constraintEnd_toEndOf="@+id/botonProblemaAdmin"
        app:layout_constraintTop_toBottomOf="@+id/botonProblemaAdmin" />

    <Button
        android:id="@+id/botonPalabrasAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:onClick="botonPalabrasAdmin"
        android:text="Palabras clave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonHipotesisAdmin" />

    <Button
        android:id="@+id/botonSolucionAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:onClick="botonSolucionAdmin"
        android:text="Solucion"
        app:layout_constraintEnd_toEndOf="@+id/botonPalabrasAdmin"
        app:layout_constraintTop_toBottomOf="@+id/botonPalabrasAdmin" />

    <Button
        android:id="@+id/botonVolverAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62dp"
        android:onClick="botonVolverAdmin"
        android:text="VOLVER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>