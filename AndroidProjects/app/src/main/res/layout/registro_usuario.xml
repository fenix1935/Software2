<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D93637"
    tools:context=".Registro">


    <Button
        android:id="@+id/botonRegistrar"
        android:layout_width="147dp"
        android:layout_height="0dp"
        android:layout_marginEnd="122dp"
        android:layout_marginBottom="57dp"
        android:onClick="botonRegistrar"
        android:text="Hecho"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxRegistro" />

    <CheckBox
        android:id="@+id/checkBoxRegistro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="39dp"
        android:text="Acepto los términos y condiciones"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/botonRegistrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupRegistro" />

    <EditText
        android:id="@+id/Correo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="36dp"
        android:background="#FFFFFF"
        android:ems="30"
        android:hint="Correo"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/contra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/contra"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="37dp"
        android:background="#FFFFFF"
        android:ems="30"
        android:hint="Contraseña"
        android:inputType="text|textPassword"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/contra2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Correo" />

    <EditText
        android:id="@+id/contra2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="57dp"
        android:background="#FFFFFF"
        android:ems="30"
        android:hint="Confirmar"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/radioGroupRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contra" />

    <RadioGroup
        android:id="@+id/radioGroupRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxRegistro"
        app:layout_constraintStart_toStartOf="@+id/checkBoxRegistro"
        app:layout_constraintTop_toBottomOf="@+id/contra2">

        <RadioButton
            android:id="@+id/radioButtonEstudiante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estudiante"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/radioButtonProfesor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profesor"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>